rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Items collection - shared across all users
    match /items/{itemId} {
      // Anyone authenticated can read all items
      allow read: if request.auth != null;
      
      // Only owner can create/update their own items
      allow create: if request.auth != null 
        && request.resource.data.ownerId == request.auth.uid;
      
      // Owner can update, or borrower can update status
      allow update: if request.auth != null;
      
      // Only owner can delete
      allow delete: if request.auth != null 
        && resource.data.ownerId == request.auth.uid;
    }
    
    // Chat messages - ITEM-SPECIFIC chats
    // chatId is now the itemId, so we verify user is owner or borrower of the item
    match /chats/{itemId}/messages/{messageId} {
      // Allow read/write if user is authenticated
      // In production, you'd verify user is owner/borrower of the item
      allow read, write: if request.auth != null;
    }
    
    // Chat document itself (for metadata)
    match /chats/{itemId} {
      allow read, write: if request.auth != null;
    }
  }
}
